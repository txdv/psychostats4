<script language="javascript" type="text/javascript">
{include file="form_js.html"}
</script>

<div class="divtablewide shade1">
<form name="profile" action="{$PHP_SELF}?c={$c|urlencode}" method="POST">
<input name="ref" value="{$ref|escape}" type="hidden" />
	<div class="table-hdr">
		<h3><#Edit Weapons#></h3>
		<p>
		<!--#_BLURB#-->
		</p>
	</div>

{if $msg}
	<div id="msg-success" class="row row-err-success">{$msg|escape}</div>
	<div class="row-spacer"></div>
{/if}

<table width=100%" border="0" cellspacing="0" cellpadding="2">
	<tr>
		<td class="header-cell" align="center"><#ID#></td>
		<td class="header-cell" align="center"><#Weapon Name#></td>
		<td class="header-cell" align="left"><#Weight#></td>
		<td class="header-cell" align="right"><#Kills#></td>
		<td class="header-cell" align="right"><acronym class="acro-tip" title="<#Shots per kill#>"><#S:K#></acronym></td>
		<td class="header-cell" align="right"><#Accuracy#></td>
	</tr>
{foreach from=$weaponlist item='w'}
	<tr>
{*
		<td align="center" onmouseover="web.open_box('{$w.uniqueid}',this)" onmouseout="web.close_box()">{weaponimg name="`$w.uniqueid`.gif" noimg=""}</td>
*}
		<td class="label" align="center">{$w.uniqueid}</td>
		<td align="center"><input name="list[{$w.weaponid|escape}][name]" value="{$w.name|escape}" type="text" size="30" class="field" /></td>
		<td align="left"><input name="list[{$w.weaponid|escape}][weight]" value="{$w.weight|escape}" type="text" size="7" class="field" /></td>
		<td class="text-small" align="right">{$w.kills|commify}</td>
		<td class="text-small" align="right">{$w.headshotkills|commify}</td>
		<td class="text-small" align="right">{$w.accuracy|digits2}%</td>
	</tr>
{/foreach}
</table>
<!--
	<div class="row">
		<span onmouseover="statusText('{$w.name|default:$w.uniqueid|escape:quotes}')" onmouseout="notext()" class="label">{$w.uniqueid}</span>
		<span class="input"><input name="email" value="{$email|escape}" type="text" size="40" class="field" /></span>
	</div>
-->

	<div class="row-spacer"></div>
	<div class="row">
		<div class="form-actions">
			<input name="submit" value="<#Save Configuration#>" type="submit" class="btn" />
			<input name="cancel" value="<#Cancel#>" type="submit" class="btn" />
		</div>
	</div>
	{include file='block_form_footer.html'}
</form>
<div class="spacer"></div>
</div>

{*
{foreach name="wlist" from=$weaponlist item="w"}
